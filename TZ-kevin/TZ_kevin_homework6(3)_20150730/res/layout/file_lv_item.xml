<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selecter_item"
    android:orientation="horizontal"
    android:padding="5dp" >

    <ImageView
        android:id="@+id/item_fileIcon"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/item_fileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/item_fileIcon"
        android:layout_marginBottom="10dp"
        android:ellipsize="end"
        android:layout_toRightOf="@+id/item_fileIcon"
        android:text="1111"
        android:maxEms="15"
        android:textColor="#326EBD"
        android:textSize="17sp"
        android:textStyle="bold" />
    
    <Button
        android:id="@+id/item_fileDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/item_fileName"
        android:textSize="13sp"   
        android:focusable="false"
        style="?android:attr/buttonStyleSmall"
        android:layout_centerVertical="true"
        android:text="@string/fileDetail"
        android:textColor="#326EBD"/>

 

</RelativeLayout>