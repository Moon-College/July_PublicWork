<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_rl_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp" >

    <ImageView
        android:id="@+id/item_imv_head"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/contentDescription_txt"
        android:src="@drawable/pic_0" />

    <TextView
        android:id="@+id/item_tv_screenName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/item_imv_head"
        android:layout_margin="10dp"
        android:layout_toRightOf="@+id/item_imv_head"
        android:text="name"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/item_tv_faceScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingRight="10dp"
        android:text="faceScore"
        android:textColor="#333333"
        android:textSize="15sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/item_tv_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/item_imv_head"
        android:layout_alignLeft="@+id/item_tv_screenName"
        android:layout_marginBottom="5dp"
        android:text="info "
        android:textColor="#cccccc"
        android:textSize="12sp" />

</RelativeLayout>