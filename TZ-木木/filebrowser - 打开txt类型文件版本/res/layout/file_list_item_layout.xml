<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="center_vertical"
    android:padding="@dimen/file_list_item_padding" >

    <ImageView
        android:id="@+id/file_img"
        android:layout_width="@dimen/file_img_size"
        android:layout_height="@dimen/file_img_size" />

    <TextView
        android:id="@+id/file_name"
        android:gravity="center_vertical"
        android:textColor="#111111"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/file_list_item_padding" />

</LinearLayout>