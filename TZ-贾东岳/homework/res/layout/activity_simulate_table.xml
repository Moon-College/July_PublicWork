<!-- 第四节课第二个作业的布局文件，
	模拟一个tableLayout，并给其每列不同的背景颜色 -->
<com.tz.fourth.second.MyLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/qianlan"
    android:orientation="vertical"
    tools:context="com.tz.fourth.second.SimulateTableActivity" >
	<include 
        layout="@layout/list_items_ll"
        android:id="@+id/table_title"/>

    <ListView
        android:id="@+id/list"
        android:divider="@color/blueviolet"
        android:dividerHeight="1.0dip"
        android:scrollbars="none"
        android:background="@drawable/listview_bg"
        android:cacheColorHint="@android:color/transparent"
        android:fadingEdge="none"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
    </ListView>
</com.tz.fourth.second.MyLinearLayout>